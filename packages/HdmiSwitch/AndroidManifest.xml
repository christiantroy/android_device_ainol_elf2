<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
      package="com.amlogic.HdmiSwitch"
      android:versionCode="1"
      android:versionName="4.0"
      android:sharedUserId="android.uid.system"> 
      
	<uses-permission android:name="android.permission.BROADCAST_STICKY" />        
	<uses-permission android:name="android.permission.RECEIVE_BOOT_COMPLETED" />        
    <uses-permission android:name="android.permission.WAKE_LOCK" />  
    <application android:icon="@drawable/hdmi_icon" android:label="@string/app_name"
    			 android:persistent="true">
        <activity android:name=".HdmiSwitch"
                  android:label="@string/app_name"
                  android:theme="@android:style/Theme.Holo.DialogWhenLarge">
                  
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />                
            </intent-filter>
        </activity>
	 <receiver android:name=".HdmiBroadcastReceiver">
		 <intent-filter>
			<action android:name="android.intent.action.BOOT_COMPLETED"/>
			<action android:name="android.intent.action.HDMI_HW_PLUGGED"/>
		 </intent-filter>
	 </receiver>
	 <service android:name=".HdmiDelayedService" />
    </application>
    <uses-sdk android:minSdkVersion="14"/>

</manifest> 
